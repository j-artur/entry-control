<% if can? :create, Unit %>
  <div class="flex justify-end">
    <a href="<%= new_unit_path %>">
      <button class="bg-blue-500 hover:bg-blue-700 text-sm text-white py-2 px-4 rounded">
        New Unit
      </button>
    </a>
  </div>
<% end %>

<div id="units" class="flex flex-col items-center gap-2">
  <% @units.each do |unit| %>
    <div class="flex flex-row w-80 justify-between items-center p-4 bg-white rounded">
      <div id="<%= dom_id unit %>">
        <p>
          <%= unit.name %>
        </p>
      </div>
      <a href="/units/<%= unit.id %>">
        <button class="bg-blue-500 hover:bg-blue-700 text-sm text-white py-2 px-4 rounded">
          Show
        </button>
      </a>
    </div>
  <% end %>
</div>
